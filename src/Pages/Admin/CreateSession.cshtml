@page
@model EventFeedbackApp.Pages.Admin.CreateSessionModel
@{
    ViewData["Title"] = "Neue Session anlegen";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Session.Title" class="form-label">Titel</label>
        <input asp-for="Session.Title" class="form-control" />
        <span asp-validation-for="Session.Title" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Speichern</button>
    @if (Request.Query.ContainsKey("saved"))
    {
        <div class="alert alert-success mt-3">Session angelegt!</div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}